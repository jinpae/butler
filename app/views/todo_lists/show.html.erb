<% title "#{@todo_list.title}: #{@todo_list.description}" %>

<section id="todo-items-section" class="page-wrap">
	<div class="container">
		<h1 class="todo-list-title">
			<%= @todo_list.title %>
		</h1>
		<p class="todo-list-description">
		  <%= @todo_list.description %>
		</p>

		<div class="todo-items-wrap">
			<% if @todo_list.completed_todo_items.size > 0 %>
				<%= render 'todo_items/toggle_completed_items_btn' %>
			<% end %>

			<div id="todo-list">
				<%= render @todo_list.todo_items %>
			</div>

			<%= render 'todo_items/new_todo_item_form' %>

			<div class="links text-center">
				<%= link_to todo_lists_path do %>
					<i class="fa fa-arrow-left"></i> Back
				<% end %>

				<%= link_to edit_todo_list_path(@todo_list) do %>
					<i class="fa fa-pencil"></i> Edit
				<% end %>

				<%= link_to todo_list_path(@todo_list), method: :delete, data: { confirm: 'Are you sure?' } do %>
					<i class="fa fa-trash"></i> Delete
				<% end %>
			</div>
		</div>
	</div>
</section>
