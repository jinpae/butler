<div class="todo-item-row">
	<%= link_to_toggle_status @todo_list, todo_item, 'todo-item-checkbox' %>

	<div class="todo-item">
		<%= style_content todo_item, 'todo-item-content' %>
	</div>
	
	<div class="actions-wrap">
		<%= link_to edit_todo_list_todo_item_path(@todo_list, todo_item), class: "todo-item-actions edit" do %>
			<i class="fa fa-pencil"></i>
		<% end %>

		<%= link_to todo_list_todo_item_path(@todo_list, todo_item), method: :delete, data: { confirm: 'Are you sure?' }, class: "todo-item-actions delete" do %>
			<i class="fa fa-trash"></i>
		<% end %>
	</div>
</div>
