$('#<%= dom_id @todo_item %>').replaceWith("<%= j render @todo_item %>");

var archiveBtnId = '#toggle-completed-items-btn';

<% if @todo_list.completed_todo_items.size > 0 %>
	if ($(archiveBtnId).length == 0) {
		$('.todo-items-wrap').prepend("<%= j render 'todo_items/toggle_completed_items_btn' %>");
	} else {
		$('.toggle-completed-items-btn-wrap').remove();
		$('.todo-items-wrap').prepend("<%= j render 'todo_items/toggle_completed_items_btn' %>");
	}
<% else %>
	$(archiveBtnId).remove();
<% end %>
