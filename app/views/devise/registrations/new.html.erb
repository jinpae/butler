<% title 'Sign Up' %>

<section class="page-wrap">
	<div class="container">
		<h1 class="page-title"><%= yield :title %></h1>

		<div class="form-wrap">
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>
			
			  <div class="field">
			    <%= f.label :first_name %><br />
			    <%= f.text_field :first_name, autofocus: true, required: true %>
			  </div>
			
			  <div class="field">
			    <%= f.label :last_name %><br />
			    <%= f.text_field :last_name, required: true %>
			  </div>

			  <div class="field">
					<%= f.label :username %>
					<span><em>(6 characters minimum)</em></span>
					<br />
			    <%= f.text_field :username, required: true %>
			  </div>
			
			  <div class="field">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, required: true %>
			  </div>
			
			  <div class="field">
			    <%= f.label :password, required: true %>
			    <% if @minimum_password_length %>
						<span><em>(<%= @minimum_password_length %> characters minimum)</em></span>
			    <% end %><br />
			    <%= f.password_field :password, autocomplete: "off", required: true %>
			  </div>
			
			  <div class="field">
			    <%= f.label :password_confirmation %><br />
			    <%= f.password_field :password_confirmation, autocomplete: "off" %>
			  </div>
			
			  <div class="actions">
			    <%= f.submit "Create account", class: "btn" %>
			  </div>
			<% end %>
			
			<p>Already have an account? <%= link_to "Sign in", new_user_session_path %></p>
		</div>
	</div>
</section>
